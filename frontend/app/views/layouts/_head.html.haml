%head
  %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
  %meta{"http-equiv" => "X-UA-Compatible", content: "IE=edge"}/
  %meta{name: "viewport", content: "width=device-width, initial-scale=1"}/
  %meta{name: "description", content: "Advanced Search Engine for Magic: the Gathering cards"}/
  %meta{name: "keywords", content: "mtg, magic the gathering, cards, search engine"}/
  - if @title
    %title #{@title} - #{APP_NAME}
  - else
    %title #{APP_NAME}
  = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  %link{rel: "search", href: "https://lore-seeker.cards/opensearchdescription.xml", type: "application/opensearchdescription+xml", title: APP_NAME}
  = csrf_meta_tags
